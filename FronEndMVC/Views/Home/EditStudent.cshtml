@model FronEndMVC.Models.Student
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <form id="studentDataEntryForm" method="post">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="Name">STUDENT NAME:</label>
                            </div>
                            <div class="col-md-3">
                                <input id="StudentNameEdit" asp-for="Name" type="text" name="Name" required />
                            </div>
                            <div class="col-md-3">
                                <span id="StudentNameLabel"> </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
